{
  "name": "@hostaworld/active-record-node",
  "version": "1.0.7",
  "description": "A Simple Active Record Style ORM for Node",
  "main": "lib/index.bundle.min.js",
  "scripts": {
    "prepublish": "PROD_ENV=1 webpack",
    "build": "webpack --progress --colors",
    "build:min": "PROD_ENV=1 webpack --progress --colors",
    "watch": "webpack --progress --colors --watch",
    "test": "jest",
    "test-ci": "jest --coverage --ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t83714/Active-Record-Node.git"
  },
  "keywords": [
    "Node",
    "Active",
    "Record",
    "ORM",
    "Database"
  ],
  "author": "Jacky Jiang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/t83714/Active-Record-Node/issues"
  },
  "homepage": "https://github.com/t83714/Active-Record-Node#readme",
  "dependencies": {
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "mysql2": "^1.5.1",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "uuid": "^3.1.0",
    "webpack": "^3.8.1"
  },
  "@std/esm": {
    "esm": "all",
    "cjs": true
  },
  "jest": {
    "testMatch": [
      "**/test/?(*.)(spec|test).js"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "bail": true,
    "testEnvironment": "node"
  }
}
